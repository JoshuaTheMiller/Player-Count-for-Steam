<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamStatsApp.App">
	<Application.Resources>
        <ResourceDictionary>
            <Color x:Key="colorPrimaryDark">Black</Color>
            <Color x:Key="PageBackgroundColor">Black</Color>
            <Color x:Key="NormalTextColor">White</Color>
            <Color x:Key="ComponentBackgroundColor">#484848</Color>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource NormalTextColor}" />
            </Style>
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource PageBackgroundColor}"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ComponentBackgroundColor}"/>
                <Setter Property="TextColor" Value="{StaticResource NormalTextColor}"/>
            </Style>
            <Style TargetType="{x:Type Entry}">
                <Setter Property="PlaceholderColor" Value="{StaticResource ComponentBackgroundColor}"/>
                <Setter Property="TextColor" Value="{StaticResource NormalTextColor}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>